<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity"
        tools:menu="@menu/menu_detail">


    <ImageView
            android:id="@+id/img_item"
            android:layout_width="180dp"
            android:layout_height="270dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/tv_item_detail"/>
    <TextView
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="Title"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_name"
            android:id="@+id/textView" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="179dp"
            android:layout_height="33dp"
            android:text="Nama Judul"
            android:textStyle="bold"
            android:textSize="13sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="Release"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            android:id="@+id/textView4"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_released"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_name"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"/>

    <TextView
            android:id="@+id/tv_item_released"
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="Tahun Rilis"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"/>

    <TextView
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="Rating"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_released"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_rating"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_item_rating"
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="hasil Rating"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>

    <TextView
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="Genre"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_rating"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_genre"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:id="@+id/tv_item_genre"
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:text="Nama Genre"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_editor_absoluteX="206dp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_item"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_detail"/>

    <TextView
            android:id="@+id/tv_item_detail"
            android:text="Detail"
            android:textSize="16sp"
            android:layout_width="369dp"
            android:layout_height="333dp"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/tv_item_genre"/>

</androidx.constraintlayout.widget.ConstraintLayout>