<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.AboutFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                tools:layout_editor_absoluteY="157dp"
                tools:layout_editor_absoluteX="155dp"
                android:src="@drawable/ic_photo_profile"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="128dp"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arief Taufik Rahman"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/profile_image"/>

        <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="arieftaufikrahman123@gmail.com"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/profile_text"
                android:layout_centerVertical="true"/>
        <Button
                android:id="@+id/profile_linked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getUrlFromIntent"
                android:text="LINKEDIN"
                android:layout_below="@id/profile_text"
                android:layout_marginTop="58dp"
                tools:ignore="OnClick"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

</FrameLayout>